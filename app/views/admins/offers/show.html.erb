<div class="container">
  <div class="row">
    <div class="col-10 plate">
      <% if @offer.customer_id == @customer.id %>
        <div class="offer-detail-wrapper row">

          <div class="offer-detail-product col-sm-5">
            <%= link_to product_path(@offer.offer_product) do %>
            <div class="offer-detail-product-block">
              <div class="offer-detail-product-image-block">
                <%= attachment_image_tag @offer.offer_product.product_images.first, :image, format: "jpeg", fallback: 'no_image.jpg', class: "offer-detail-product-image" %>
              </div>
              <div class="offer-detail-product-detail">
                <p><%= @customer.shop_name %>さんがオファーした商品:</p><br>
                <p><%= @offer.offer_product.name %></p>
              </div>
            </div>
            <% end %>
          </div>

          <div class="offer-detail-product-i col-sm-2">
            <i class="fas fa-exchange-alt"></i>
          </div>

          <div class="offer-detail-product col-sm-5">
            <%= link_to product_path(@offer.trade_product) do %>
            <div class="offer-detail-product-block">
              <div class="offer-detail-product-image-block">
                <%= attachment_image_tag @offer.trade_product.product_images.first, :image, format: "jpeg", fallback: 'no_image.jpg', class: "offer-detail-product-image" %>
              </div>
              <div class="offer-detail-product-detail">
                <p>交換する商品:</p><br>
                <p><%= @offer.trade_product.name %></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="offer-detail-wrapper row">

          <div class="offer-detail-product col-sm-5">
            <%= link_to product_path(@offer.offer_product) do %>
            <div class="offer-detail-product-block">
              <div class="offer-detail-product-image-block">
                <%= attachment_image_tag @offer.offer_product.product_images.first, :image, format: "jpeg", fallback: 'no_image.jpg', class: "offer-detail-product-image" %>
              </div>
              <div class="offer-detail-product-detail">
                <p><%= @customer.shop_name %>さんがオファーされた商品:</p><br>
                <p><%= @offer.offer_product.name %></p>
              </div>
            </div>
            <% end %>
          </div>

          <div class="offer-detail-product-i col-sm-2">
            <i class="fas fa-exchange-alt"></i>
          </div>

          <div class="offer-detail-product col-sm-5">
            <%= link_to product_path(@offer.trade_product) do %>
            <div class="offer-detail-product-block">
              <div class="offer-detail-product-image-block">
                <%= attachment_image_tag @offer.trade_product.product_images.first, :image, format: "jpeg", fallback: 'no_image.jpg', class: "offer-detail-product-image" %>
              </div>
              <div class="offer-detail-product-detail">
                <p>交換する商品:</p><br>
                <p><%= @offer.trade_product.name %></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-12">
          <div class="offer-detail-btn-wrapper">
            <%= link_to "オファーの取り下げ", admins_product_offer_path(@offer.offer_product.id, @offer.id), method: :delete, class:"offer-detail-btn btn btn-secondary",
            "data-confirm" => "オファーを取り下げますか？" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>




