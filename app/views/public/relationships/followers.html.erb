<div class="container">
  <div class="row">
    <div class="col-8 plate">

      <div class="followers-lists">
        <% if @customers.empty? %>
          <div class="followers-header">
            <p>フォローされている人はいません</p>
          </div>
        <% else %>
          <div class="followers-header">
            <p><%= @customers.count %><br>フォロワー</p>
          </div>
          <% @customers.each do |customer| %>
            <%= link_to customer_product_index_path(customer.id) do %>
              <div class="follow-customer-block">
                <div class="follow-customers">
                    <%= attachment_image_tag customer, :customer_image, size: "30x30", fallback: 'no_image.jpg',class: "customer-image" %><br>
                    <%= customer.shop_name %><br>
                    <% if current_customer.following?(customer) %>
                        <%= link_to "-Unfollow", customer_relationships_path(customer.id), method: :delete, class: "btn btn-secondary follow-customer-btn" %>
                    <% else %>
                      <%= link_to "+Follow", customer_relationships_path(customer.id), method: :post, class: "btn btn-danger follow-customer-btn" %>
                    <% end %>

                </div>
              </div>

            <% end %>
          <% end %>


        <% end %>
      </div>









    </div>
  </div>
</div>

