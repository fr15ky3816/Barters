<% if customer_signed_in? %>
<div class="bar-menu bar-menu-modal-wrapper">
  <div class="profile-detail-modal">
    <h5><%= current_customer.shop_name %></h5>
    <h5>商品数:<%= current_customer.products.count %></h5>
  </div>
  <div class="menu-btn-modal">
    <div class="modal-btn"><%= link_to "マイページ", customer_path(current_customer), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "プロフィール", customer_show_profile_path(current_customer.id), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "本人情報", edit_customer_path(current_customer.id), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "#{ current_customer.followings.count }フォロー中", customer_followings_path(current_customer), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "#{ current_customer.followers.count }フォロワー", customer_followers_path(current_customer), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "オファーした商品", customer_offers_path(current_customer), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "オファーされた商品", customer_offered_path(current_customer), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "オファー成立商品(準備中)", customer_orders_listing_path(current_customer), class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "オファー成立商品(取引中)",customer_orders_in_progress_path(current_customer), class:"text-dark" %></div>

  </div>
</div>
<% else %>
<div class="bar-menu bar-menu-modal-wrapper">

  <div class="menu-btn-modal">
    <div class="modal-btn"><%= link_to "新規登録", new_customer_registration_path, class:"text-dark" %></div>
    <div class="modal-btn"><%= link_to "ログイン", new_customer_session_path, class:"text-dark" %></div>
  </div>
</div>
<% end %>